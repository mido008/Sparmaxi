<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="2.5" client="site" method="upgrade">
	<name>Eshop Manufacturer</name>
	<creationDate>May 2013</creationDate>
	<author>Giang Dinh Truong</author>
	<authorEmail>contact@joomdonation.com</authorEmail>
	<authorUrl>http://www.joomdonation.com</authorUrl>
	<copyright>Copyright (C) 2012 Ossolution Team</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<version>1.3.1</version>
	<description>This module show manufacturers for Eshop</description>
	<files>
		<filename module="mod_eshop_manufacturer">mod_eshop_manufacturer.php</filename>
		<folder>admin</folder>
		<folder>tmpl</folder>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<filename>mod_eshop_manufacturer.xml</filename>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB.mod_eshop_manufacturer.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic" addfieldpath="/administrator/components/com_eshop/elements">
				<field type="asset" path="modules/mod_eshop_manufacturer/admin/" />
				<field name="moduleclass_sfx" type="text" label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL" description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
					
				<field name="image_width" type="text" default="80" label="ESHOP_THUMBNAIL_WIDTH" description="ESHOP_THUMBNAIL_WIDTH_DESC" />
				<field name="image_height" type="text" default="80" label="ESHOP_THUMBNAIL_HEIGHT" description="ESHOP_THUMBNAIL_HEIGHT_DESC" />
				<field name="manufacturers_total" type="text" default="8" label="ESHOP_MANUFACTURERS_TOTAL" description="ESHOP_MANUFACTURERS_TOTAL_DESC" />
				<field name="manufacturers_show" type="text" default="4" label="ESHOP_MANUFACTURERS_SHOW" description="ESHOP_MANUFACTURERS_SHOW_DESC" />
				<field name="slide_width" type="text" default="680" label="ESHOP_SLIDE_WIDTH" description="ESHOP_SLIDE_WIDTH_DESC" />
			</fieldset>
		</fields>
	</config>
</extension>