<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="2.5" client="site" method="upgrade">
	<name>Eshop Advanced Search</name>
	<creationDate>May 2013</creationDate>
	<author>Giang Dinh Truong</author>
	<authorEmail>contact@joomdonation.com</authorEmail>
	<authorUrl>http://www.joomdonation.com</authorUrl>
	<copyright>Copyright (C) 2012 Ossolution Team</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<version>1.3.3</version>
	<description>This is advanced search products for Eshop</description>
	<files>
		<filename module="mod_eshop_advanced_search">mod_eshop_advanced_search.php</filename>
		<folder>assets</folder>
		<folder>tmpl</folder>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<filename>mod_eshop_advanced_search.xml</filename>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB.mod_eshop_advanced_search.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="moduleclass_sfx" type="text" label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL" description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
				<field name="show_price" 
					type="radio"
					class="btn-group btn-group-yesno" 
					default="1"
					label="ESHOP_SHOW_PRICE"
					description="ESHOP_SHOW_PRICE_DESC">
		    		<option value="1">ESHOP_YES</option>
		    		<option value="0">ESHOP_NO</option>
				</field>
				<field name="max_price" type="text" default="1000" label="ESHOP_MAX_PRICE" description="ESHOP_MAX_PRICE_DESC" />
				<field name="min_price" type="text" default="0" label="ESHOP_MIN_PRICE" description="ESHOP_MIN_PRICE_DESC" />
				<field name="show_weight" 
					type="radio"
					class="btn-group btn-group-yesno" 
					default="0"
					label="ESHOP_SHOW_WEIGHT"
					description="ESHOP_SHOW_WEIGHT_DESC">
		    		<option value="1">ESHOP_YES</option>
		    		<option value="0">ESHOP_NO</option>
				</field>
				<field name="same_weight_unit" 
					type="radio"
					class="btn-group btn-group-yesno" 
					default="1"
					label="ESHOP_SAME_WEIGHT_UNIT"
					description="ESHOP_SAME_WEIGHT_UNIT_DESC">
		    		<option value="1">ESHOP_YES</option>
		    		<option value="0">ESHOP_NO</option>
				</field>
				<field name="max_weight" type="text" default="100" label="ESHOP_MAX_WEIGHT" description="ESHOP_MAX_WEIGHT_DESC" />
				<field name="min_weight" type="text" default="0" label="ESHOP_MIN_WEIGHT" description="ESHOP_MIN_WEIGHT_DESC" />
				<field name="show_length" 
					type="radio"
					class="btn-group btn-group-yesno" 
					default="0"
					label="ESHOP_SHOW_LENGTH"
					description="ESHOP_SHOW_LENGTH_DESC">
		    		<option value="1">ESHOP_YES</option>
		    		<option value="0">ESHOP_NO</option>
				</field>
				<field name="same_length_unit" 
					type="radio"
					class="btn-group btn-group-yesno" 
					default="1"
					label="ESHOP_SAME_LENGTH_UNIT"
					description="ESHOP_SAME_LENGTH_UNIT_DESC">
		    		<option value="1">ESHOP_YES</option>
		    		<option value="0">ESHOP_NO</option>
				</field>
				<field name="max_length" type="text" default="100" label="ESHOP_MAX_LENGTH" description="ESHOP_MAX_LENGTH_DESC" />
				<field name="min_length" type="text" default="0" label="ESHOP_MIN_LENGTH" description="ESHOP_MIN_LENGTH_DESC" />
				<field name="show_width" 
					type="radio"
					class="btn-group btn-group-yesno" 
					default="0"
					label="ESHOP_SHOW_WIDTH"
					description="ESHOP_SHOW_WIDTH_DESC">
		    		<option value="1">ESHOP_YES</option>
		    		<option value="0">ESHOP_NO</option>
				</field>
				<field name="max_width" type="text" default="100" label="ESHOP_MAX_WIDTH" description="ESHOP_MAX_WIDTH_DESC" />
				<field name="min_width" type="text" default="0" label="ESHOP_MIN_WIDTH" description="ESHOP_MIN_WIDTH_DESC" />
				<field name="show_height" 
					type="radio"
					class="btn-group btn-group-yesno" 
					default="0"
					label="ESHOP_SHOW_HEIGHT"
					description="ESHOP_SHOW_HEIGHT_DESC">
		    		<option value="1">ESHOP_YES</option>
		    		<option value="0">ESHOP_NO</option>
				</field>
				<field name="max_height" type="text" default="100" label="ESHOP_MAX_HEIGHT" description="ESHOP_MAX_HEIGHT_DESC" />
				<field name="min_height" type="text" default="0" label="ESHOP_MIN_HEIGHT" description="ESHOP_MIN_HEIGHT_DESC" />
				<field name="show_stock" 
					type="radio"
					class="btn-group btn-group-yesno" 
					default="1"
					label="ESHOP_SHOW_STOCK"
					description="ESHOP_SHOW_STOCK_DESC">
		    		<option value="1">ESHOP_YES</option>
		    		<option value="0">ESHOP_NO</option>
				</field>
				<field name="child_categories_level" 
					type="list"
					default="9999"
					label="ESHOP_CHILD_CATEGORIES_LEVEL"
					description="ESHOP_CHILD_CATEGORIES_LEVEL_DESC">
		    		<option value="1">1</option>
		    		<option value="2">2</option>
		    		<option value="3">3</option>
		    		<option value="4">4</option>
		    		<option value="5">5</option>
		    		<option value="6">6</option>
		    		<option value="7">7</option>
		    		<option value="8">8</option>
		    		<option value="9">9</option>
		    		<option value="9999">All</option>
		    		
				</field>
				<field name="show_categories" 
					type="radio"
					class="btn-group btn-group-yesno"
					default="1"
					label="ESHOP_SHOW_CATEGORIES"
					description="ESHOP_SHOW_CATEGORIES_DESC">
		    		<option value="1">ESHOP_YES</option>
		    		<option value="0">ESHOP_NO</option>
				</field>
				<field name="show_manufacturers" 
					type="radio"
					class="btn-group btn-group-yesno" 
					default="1"
					label="ESHOP_SHOW_MANUFACTURERS"
					description="ESHOP_SHOW_MANUFACTURERS_DESC">
		    		<option value="1">ESHOP_YES</option>
		    		<option value="0">ESHOP_NO</option>
				</field>
				<field name="show_attributes" 
					type="radio"
					class="btn-group btn-group-yesno" 
					default="1"
					label="ESHOP_SHOW_ATTRIBUTES"
					description="ESHOP_SHOW_ATTRIBUTES_DESC">
		    		<option value="1">ESHOP_YES</option>
		    		<option value="0">ESHOP_NO</option>
				</field>
				<field name="show_options" 
					type="radio"
					class="btn-group btn-group-yesno" 
					default="1"
					label="ESHOP_SHOW_OPTIONS"
					description="ESHOP_SHOW_OPTIONS_DESC">
		    		<option value="1">ESHOP_YES</option>
		    		<option value="0">ESHOP_NO</option>
				</field>
				<field name="item_id" type="text"
					label="Item ID" description="Menu ItemID" default="">
				</field>
			</fieldset>
		</fields>
	</config>
</extension>